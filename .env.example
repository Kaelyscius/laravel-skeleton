# ===========================================
# üöÄ LARAVEL DOCKER ENVIRONMENT
# ===========================================

# Application
APP_NAME=Laravel
APP_ENV=local
APP_KEY=base64:your-app-key-here
APP_DEBUG=true
APP_URL=https://laravel.local
APP_TIMEZONE=UTC

# Docker
COMPOSE_PROJECT_NAME=laravel-app

# ===========================================
# üíæ DATABASE (MariaDB)
# ===========================================
DB_CONNECTION=mysql
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel_user
DB_PASSWORD=secure_password
DB_ROOT_PASSWORD=root_password

# ===========================================
# üóÑÔ∏è REDIS
# ===========================================
REDIS_HOST=redis
REDIS_PASSWORD=redis_secret_password
REDIS_PORT=6379

# ===========================================
# üìß EMAIL (D√©veloppement avec MailHog)
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@laravel.local"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# üîç QUEUES (Redis)
# ===========================================
QUEUE_CONNECTION=redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis

# ===========================================
# üìä MONITORING - Watchtower Notifications
# ===========================================
# Laissez vide pour d√©sactiver les notifications
WATCHTOWER_NOTIFICATION_URL=

# Exemples :
# Discord: discord://token@channel_id
# Slack: slack://hook_url
# Email: smtp://username:password@host:port/?from=from@example.com&to=to@example.com

# ===========================================
# üîê S√âCURIT√â
# ===========================================
JWT_SECRET=your-jwt-secret-key
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ===========================================
# üîß D√âVELOPPEMENT
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single,nightwatch,daily
LOG_LEVEL=debug
NIGHTWATCH_TOKEN="${NIGHTWATCH_TOKEN}"
NIGHTWATCH_EXCEPTION_SAMPLE_RATE=1.0
NIGHTWATCH_COMMAND_SAMPLE_RATE=1.0
NIGHTWATCH_REQUEST_SAMPLE_RATE=0.1 #Recommended
TELESCOPE_ENABLED=true
HORIZON_DASHBOARD_ENABLED=true
VITE_APP_NAME="${APP_NAME}"

