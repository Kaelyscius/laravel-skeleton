# Docker Compose
COMPOSE_PROJECT_NAME=laravel-app

# Database
DB_CONNECTION=mysql
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=redissecret
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@laravel.local
MAIL_FROM_NAME="${APP_NAME}"

# Application
APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://laravel.local

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Queue
QUEUE_CONNECTION=redis

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=redis

# Horizon
HORIZON_PREFIX=horizon:${APP_NAME}

# SSL Certificate
SSL_COUNTRY=FR
SSL_STATE=IDF
SSL_LOCALITY=Paris
SSL_ORGANIZATION=Laravel
SSL_ORGANIZATIONAL_UNIT=Development
SSL_COMMON_NAME=laravel.local