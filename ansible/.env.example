# Configuration Ansible - Exemple
# Copiez ce fichier vers .env et adaptez selon vos besoins
# cp .env.example .env

# Configuration du repository Git
GIT_REPO_URL=https://github.com/votre-username/myLaravelSkeleton.git
GIT_BRANCH=main

# Configuration du déploiement
DEPLOY_PATH=/var/www/laravel-app
PROJECT_NAME=laravel-app
DOMAIN_NAME=laravel.local

# Configuration SSL
SSL_ENABLED=true
SSL_EMAIL=admin@votre-domaine.com

# Configuration des notifications
NOTIFICATIONS_ENABLED=true
NOTIFICATION_EMAIL=admin@votre-domaine.com

# Configuration Slack (optionnel)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# Configuration Discord (optionnel)
DISCORD_WEBHOOK_URL=

# Configuration de l'environnement
ENVIRONMENT=production

# Configuration de la base de données
# Note: Les mots de passe sont générés automatiquement
DB_NAME=laravel_db
DB_USER=laravel_user

# Configuration Redis
# Note: Le mot de passe est généré automatiquement
REDIS_DB=0

# Configuration des sauvegardes
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"

# Configuration du monitoring
MONITORING_ENABLED=true
MONITORING_RETENTION_DAYS=30

# Configuration des mises à jour automatiques
AUTO_UPDATES_ENABLED=true
AUTO_REBOOT_ENABLED=false

# Configuration des services optionnels
MAILHOG_ENABLED=false
ADMINER_ENABLED=false
DOZZLE_ENABLED=true
IT_TOOLS_ENABLED=false
WATCHTOWER_ENABLED=true