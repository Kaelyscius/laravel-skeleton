# Configuration Logwatch générée par Ansible
# Environnement: {{ environment }}

# Niveau de détail: Low (0), Med (5), High (10)
Detail = {{ 'High' if laravel_debug | default(false) else 'Med' }}

# Type de sortie: stdout, mail, file
Output = mail

# Format de sortie: text, html
Format = text

# Email de destination
MailTo = {{ notifications.email.recipients[0] | default('root') }}

# Nom d'hôte dans le rapport
HostName = {{ inventory_hostname }}

# Plage de dates: Yesterday, Today, All
Range = Yesterday

# Services à surveiller
Service = All

# Exclure certains services
Service = "-zz-network"
Service = "-zz-sys"

# Niveau de log
LogLevel = {{ laravel_log_level | default('info') }}

# Fichier de configuration temporaire
TmpDir = /var/cache/logwatch

# Répertoire de sortie
LogDir = /var/log