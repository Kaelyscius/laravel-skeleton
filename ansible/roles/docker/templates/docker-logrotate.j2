# Configuration de rotation des logs Docker
/var/lib/docker/containers/*/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    copytruncate
    sharedscripts
    postrotate
        /bin/kill -USR1 `cat /var/run/docker.pid 2>/dev/null` 2>/dev/null || true
    endscript
}

